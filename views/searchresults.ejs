<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            background-image: url("background3.jpg");
            background-size: cover;
        }

        h1 {
            color: white;
            text-align: center;
            -webkit-text-stroke: 1px blue;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Search Results</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand" style="color: rgb(191, 255, 161)">Search Results</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <form method="POST" action='/search' class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" name="Search" type="search" placeholder="Search"
                    aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <script>
        var list="<%=list%>";
        if(list.length==0){
            var h1=document.createElement("h1");
            var body=document.querySelector("body");
            h1.innerHTML="no results found";
            body.appendChild(h1);
        }else{
            var arr=list.split(",");
            var i=0;
            for(i=0;i<arr.length;i++){
                var body=document.querySelector("body");
                var img=document.createElement("img");
                var div=document.createElement("div");
                img.style.width="300px";
                img.style.height="300px";
                var view=document.createElement("button");
                view.innerHTML="View";
                view.className="btn btn-secondary ml-3"
                if(arr[i]=="tennis racket"){
                    img.src="tennis.jpg";
                    view.onclick=function(){
                        window.location.href="tennis";
                    }
                }else if(arr[i]=="boxing bag"){
                    img.src="boxing.jpg";
                    view.onclick=function(){
                        window.location.href="boxing";
                    }
                }else if(arr[i]=="galaxy s21"){
                    img.src="galaxy.jpg";
                    view.onclick=function(){
                        window.location.href="galaxy";
                    }
                }else if(arr[i]=="iphone 13 pro"){
                    img.src="iphone.jpg";
                    view.onclick=function(){
                        window.location.href="iphone";
                    }
                }else if(arr[i]=="leaves of grass"){
                    img.src="leaves.jpg";
                    view.onclick=function(){
                        window.location.href="leaves";
                    }
                }else if(arr[i]=="the sun and her flowers"){
                    img.src="sun.jpg";
                    view.onclick=function(){
                        window.location.href="sun";
                    }
                }
                div.appendChild(img);
                div.appendChild(view);
                var div2=document.createElement("div");
                div2.style.height="50px";
                body.appendChild(div);
                body.appendChild(div2);
            }

        }
    </script>
</body>
</html>